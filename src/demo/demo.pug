mixin inputNumber(options)
  .input-number
    label.mdc-text-field.mdc-text-field--outlined
      span.mdc-notched-outline
        span.mdc-notched-outline__leading
        span.mdc-notched-outline__notch
          span.mdc-floating-label= options.title
        span.mdc-notched-outline__trailing
      input.mdc-text-field__input(type="number")

mixin checkbox(options)
  .mdc-switch
    .mdc-switch__track
    .mdc-switch__thumb-underlay
      .mdc-switch__thumb
    label= options.title 
      input.mdc-switch__native-control(type="checkbox" role="switch")



mixin panel(options)
  .panel(id=options.id)
    +inputNumber({title: 'Max'})
    +inputNumber({title: 'Max'})
    +inputNumber({title: 'Step'})
    +inputNumber({title: 'From'})
    +inputNumber({title: 'To'})
    +checkbox({title: 'vertical'})
    +checkbox({title: 'interval'})
    +checkbox({title: 'scale'})
    +checkbox({title: 'popover'})
    
    


